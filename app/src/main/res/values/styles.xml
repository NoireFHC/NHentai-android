<resources>

	<style name="Base.Theme.NHBooks.Light" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Base.Theme.NHBooks.Dark" parent="Theme.AppCompat">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Theme.NHBooks.Light.DarkActionBar" parent="Base.Theme.NHBooks.Light">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="colorPrimary">@color/deep_purple_500</item>
		<item name="colorPrimaryDark">@color/deep_purple_800</item>
		<item name="colorAccent">@color/pink_500</item>
		<item name="colorControlNormal">@android:color/white</item>
		<item name="android:textColorPrimary">@android:color/white</item>
	</style>

	<style name="Theme.NHBooks.Light.DarkActionBar.Fix" parent="Theme.NHBooks.Light.DarkActionBar">
		<item name="android:textColorPrimary">@color/primary_text_default_material_light</item>
	</style>

	<style name="Theme.NHBooks.Dark" parent="Base.Theme.NHBooks.Dark">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="colorPrimary">@color/deep_purple_500</item>
		<item name="colorPrimaryDark">@color/deep_purple_800</item>
		<item name="colorAccent">@color/pink_500</item>
		<item name="colorControlNormal">@android:color/white</item>
		<item name="android:textColorPrimary">@android:color/white</item>
	</style>

	<style name="TextTag">
		<item name="@android:textSize">@dimen/tag_text_size</item>
		<item name="@android:textColor">@android:color/white</item>
		<item name="@android:background">@color/deep_purple_800</item>
		<item name="@android:ellipsize">marquee</item>
		<item name="@android:singleLine">true</item>
		<item name="@android:paddingTop">4dp</item>
		<item name="@android:paddingBottom">4dp</item>
		<item name="@android:paddingLeft">8dp</item>
		<item name="@android:paddingRight">8dp</item>
	</style>

</resources>
